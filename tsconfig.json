{
    "compilerOptions": {
        "module": "ES6",
        "target": "ES6",
        "moduleResolution": "Node",
        "declaration": true,
        "outDir": "lib",
        "declarationDir": "types",
        "allowJs": true,
        "strict": true,
        "esModuleInterop": true,
        "typeRoots": [
            "src/types"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "test",
        "types",
        "lib"
    ]
}